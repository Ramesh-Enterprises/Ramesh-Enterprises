            text-align: center;
        }

        .box {
            background: #020617;
            padding: 30px;
            border-radius: 12px;
            width: 360px;
            box-shadow: 0 0 20px rgba(0,0,0,0.5);
        }

        button {
            padding: 12px 20px;
            font-size: 16px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            background: #38bdf8;
            color: #020617;
            margin-top: 15px;
        }

        button:disabled {
            background: #475569;
            cursor: not-allowed;
        }

        .code {
            margin-top: 20px;
            font-size: 22px;
            font-weight: bold;
            letter-spacing: 2px;
            color: #facc15;
        }

        .info {
            margin-top: 10px;
            font-size: 14px;
            color: #94a3b8;
        }

        .timer {
            margin-top: 15px;
