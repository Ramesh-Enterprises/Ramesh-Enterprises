<body>

<div class="box">
    <h2>ğŸ² Random Discord Role</h2>

    <button id="claimBtn" onclick="claimRole()">Claim Role</button>

    <div class="role" id="roleDisplay"></div>
    <div class="info" id="infoText"></div>
    <div class="timer" id="timerText"></div>
</div>

<script>
    const roles = [
        'âœ¨ Ultra VIP Member',
        'ğŸ›¡ï¸ Server Guardian',
        'ğŸ® Pro Gamer',
        'ğŸ“ Quiz Master',
        'ğŸ”¥ OG Member',
        'ğŸŒŸ Legendary Supporter',
        'ğŸ§ Voice Chat Hero',
        'ğŸ§  Big Brain',
        'ğŸš€ Speedrunner',
        'ğŸ¨ Design Wizard',
        'ğŸ‘‘ Server Royalty',
        'ğŸ’ Diamond Member',
        'âš”ï¸ PvP Champion',
        'ğŸµ Music Maestro',
        'ğŸ–¥ï¸ Tech Wizard',
        'ğŸ† Tournament Winner',
        'ğŸ¤ Community Helper',
        'ğŸ”¥ Hype Machine'
    ];

    const CLAIM_DURATION = 24 * 60 * 60 * 1000; // 24 hours

    const claimBtn = document.getElementById("claimBtn");
    const roleDisplay = document.getElementById("roleDisplay");
    const infoText = document.getElementById("infoText");
    const timerText = document.getElementById("timerText");

    function claimRole() {
        const role = roles[Math.floor(Math.random() * roles.length)];
        roleDisplay.textContent = role;
        infoText.textContent = "ğŸ“© Send this role to Ramesh to claim it.";
        
        const claimTime = Date.now();
        localStorage.setItem("claimedRole", role);
        localStorage.setItem("claimTime", claimTime);

        claimBtn.disabled = true;
        startTimer();
    }

    function startTimer() {
        const claimTime = localStorage.getItem("claimTime");
        if (!claimTime) return;

        function updateTimer() {
            const now = Date.now();
            const timeLeft = (parseInt(claimTime) + CLAIM_DURATION) - now;

            if (timeLeft <= 0) {
                localStorage.removeItem("claimedRole");
                localStorage.removeItem("claimTime");
                timerText.textContent = "â³ You can claim a new role now!";
                claimBtn.disabled = false;
                return;
            }

            const hours = Math.floor(timeLeft / (1000 * 60 * 60));
            const minutes = Math.floor((timeLeft / (1000 * 60)) % 60);
            const seconds = Math.floor((timeLeft / 1000) % 60);

            timerText.textContent =
                `â° Time left: ${hours}h ${minutes}m ${seconds}s`;
        }

        updateTimer();
        setInterval(updateTimer, 1000);
    }

    // Restore state on refresh
    window.onload = () => {
        const claimedRole = localStorage.getItem("claimedRole");
        const claimTime = localStorage.getItem("claimTime");

        if (claimedRole && claimTime) {
            roleDisplay.textContent = claimedRole;
            infoText.textContent = "ğŸ“© Send this role to Ramesh to claim it.";
            claimBtn.disabled = true;
            startTimer();
        }
    };
</script>

