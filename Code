<body>
  <h1>Ramesh Code Generator</h1>

  <button onclick="generateCode()">Generate Code</button>

  <div id="code"></div>
  <div id="message"></div>

  <div id="redeem-section">
    <h2>Redeem Your Code</h2>
    <input type="text" id="redeem-code" placeholder="Enter your code here" />
    <button onclick="redeemCode()">Redeem</button>
    <div id="redeem-result"></div>
  </div>

  <script>
    let lastGeneratedCode = null;

    function generateCode() {
      const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
      let result = '';
      for (let i = 0; i < 10; i++) {
        const randIndex = Math.floor(Math.random() * chars.length); // uses Math.random and Math.floor
        result += chars.charAt(randIndex);
      }

      lastGeneratedCode = result;

      const codeEl = document.getElementById('code');
      const msgEl = document.getElementById('message');

      codeEl.textContent = result;
      msgEl.textContent = 'Your code has been generated! You can redeem it in the box below to claim a Discord role.';
    }

    function redeemCode() {
      const inputCode = document.getElementById('redeem-code').value.trim();
      const resultEl = document.getElementById('redeem-result');

      if (!inputCode) {
        resultEl.textContent = 'Please enter a code first.';
        return;
      }

      // Optional: only accept the last generated code
      if (inputCode !== lastGeneratedCode) {
        resultEl.textContent = 'Invalid code. Please generate a new one and try again.';
        return;
      }

      const roles = [
        'âœ¨ Ultra VIP Member',
        'ðŸ›¡ï¸ Server Guardian',
        'ðŸŽ® Pro Gamer',
        'ðŸŽ“ Quiz Master',
        'ðŸ”¥ OG Member',
        'ðŸŒŸ Legendary Supporter',
        'ðŸŽ§ Voice Chat Hero',
        'ðŸ§  Big Brain',
        'ðŸš€ Speedrunner',
        'ðŸŽ¨ Design Wizard'
      ];

      const randomIndex = Math.floor(Math.random() * roles.length); // random item from array
      const randomRole = roles[randomIndex];

      resultEl.textContent = 'Congrats! You can get the Discord role: ' + randomRole;
    }
  </script>
