<body>

<div class="box">
    <h2>ðŸŽ² Claim Your Discord Role</h2>

    <button id="claimBtn" onclick="claimCode()">Generate Code</button>

    <div class="code" id="codeDisplay"></div>
    <div class="info" id="infoText"></div>
    <div class="timer" id="timerText"></div>
</div>

<script>
    const CLAIM_DURATION = 24 * 60 * 60 * 1000; // 24 hours
    const LETTERS = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";

    const claimBtn = document.getElementById("claimBtn");
    const codeDisplay = document.getElementById("codeDisplay");
    const infoText = document.getElementById("infoText");
    const timerText = document.getElementById("timerText");

    function generateCode(length = 10) {
        let code = "";
        for (let i = 0; i < length; i++) {
            code += LETTERS.charAt(Math.floor(Math.random() * LETTERS.length));
        }
        return code;
    }

    function claimCode() {
        const code = generateCode(10);
        codeDisplay.textContent = code;
        infoText.textContent = "ðŸ“© Send this code to Ramesh to claim your role.";

        const claimTime = Date.now();
        localStorage.setItem("claimCode", code);
        localStorage.setItem("claimTime", claimTime);

        claimBtn.disabled = true;
        startTimer();
    }

    function startTimer() {
        const claimTime = localStorage.getItem("claimTime");
        if (!claimTime) return;

        function updateTimer() {
            const now = Date.now();
            const timeLeft = (parseInt(claimTime) + CLAIM_DURATION) - now;

            if (timeLeft <= 0) {
                localStorage.removeItem("claimCode");
                localStorage.removeItem("claimTime");
                timerText.textContent = "â³ You can generate a new code now!";
                codeDisplay.textContent = "";
                infoText.textContent = "";
                claimBtn.disabled = false;
                return;
            }

            const hours = Math.floor(timeLeft / (1000 * 60 * 60));
            const minutes = Math.floor((timeLeft / (1000 * 60)) % 60);
            const seconds = Math.floor((timeLeft / 1000) % 60);

            timerText.textContent =
                `â° Time left: ${hours}h ${minutes}m ${seconds}s`;
        }

        updateTimer();
        setInterval(updateTimer, 1000);
    }

    // Restore state after refresh
    window.onload = () => {
        const savedCode = localStorage.getItem("claimCode");
        const claimTime = localStorage.getItem("claimTime");

        if (savedCode && claimTime) {
            codeDisplay.textContent = savedCode;
            infoText.textContent = "ðŸ“© Send this code to Ramesh to claim your role.";
            claimBtn.disabled = true;
            startTimer();
        }
    };
</script>

</body>
</html>
